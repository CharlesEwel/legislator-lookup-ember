<h1>Committees</h1>
<h2> Senate Committees </h2>
<ul>
  {{#each model as |committee|}}
    {{#if (eq committee.chamber "senate")}}
      <li>
        {{subcommittee-icon committee}}
        {{#link-to 'committee' committee.committee_id}}
        {{committee.name}}
        {{/link-to}}
      </li>
    {{/if}}
  {{/each}}
</ul>
